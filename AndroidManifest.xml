<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dinicha.tts"
    android:versionCode="2"
    android:versionName="1.9" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dinicha.tts.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dinicha.tts.TTSListActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.dinicha.tts.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustResize|stateVisible|orientation" >
        </activity>
        <activity
            android:name="com.dinicha.tts.QuestionsListActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustResize|stateVisible|orientation" >
        </activity>
        <activity
            android:name="com.dinicha.tts.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>